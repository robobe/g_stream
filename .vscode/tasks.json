{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build gstream control",
            "type": "shell",
            "command": "bloom-generate rosdebian --ros-distro humble && fakeroot debian/rules binary",
            "options": {
                "cwd": "${workspaceFolder}/src/g_stream_control",
            }
        },
        {
            "label": "colcon package",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "statusbar": {
                    "color": "#d66722"
                },
            },
            "command": "colcon build --symlink-install --merge-install --packages-up-to ${input:packages}",
            "problemMatcher": []
        },
        {
            "label": "build docker dev",
            "type": "shell",
            "command": "docker build -f .devcontainer/Dockerfile.dev  -t pov:dev ."
        },
        {
            "label": "build docker runtime",
            "type": "shell",
            "command": "docker build -f .devcontainer/Dockerfile.runtime  -t pov:runtime ."
        },
        {
            "label": "git archive",
            "type": "shell",
            "command": "git archive --format=tar --output=${workspaceFolder}/archive/gst_stream_ws.tar HEAD"
        }

    ],
    "inputs": [
        {
            "id": "packages",
            "description": "application packages",
            "type": "pickString",
            "options": [
                "g_stream",
                "parameters_manager_ex"
            ]
        }
    ]
}